# auto-save SSH passphrase to keychain
Host               *
    UseKeychain    yes
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_rsa

Host             alumni-linux ccs.neu.edu
    HostName     alumni-linux.ccs.neu.edu
    IdentityFile ~/.ssh/id_rsa
    User         eclip5e

